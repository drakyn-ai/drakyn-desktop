{
  "name": "drakyn-desktop",
  "version": "0.1.0",
  "description": "Native desktop app for running LLM agents locally",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "server": "cd src/services/inference && ./venv/bin/python server.py",
    "server:win": "cd src/services/inference && venv\\Scripts\\python.exe server.py",
    "cli": "./drakyn",
    "cli:status": "./drakyn status",
    "cli:chat": "./drakyn chat",
    "cli:models": "./drakyn models",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "llm",
    "ai",
    "agents",
    "desktop",
    "mcp"
  ],
  "author": "Drakyn AI",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "playwright": "^1.56.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "ai.drakyn.desktop",
    "productName": "Drakyn",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
